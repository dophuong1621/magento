$testimonialCollection = $this->getLoadedTestimonialCollection();
$iterator = 1;
$total = $testimonialCollection->count();
?>

<div class="testimonial-wrapper">
    <ol class="testimonials list">
        <?php foreach ($testimonialCollection as $testimonial): ?>
            <li class="item<?php echo ($iterator == 1) ? ' first' : ''; ?><?php echo ($total == $iterator) ? ' last' : ''; ?>">
                <div class="title">
                    <a href="<?php echo $this->getTestimonialUrl($testimonial); ?>"
                       title="<?php echo $testimonial->getName(); ?>">
                        <?php echo $testimonial->getName(); ?>
                    </a>
                </div>
                <div class="name"><?php echo $testimonial->getName(); ?></div>
                <div class="email"><?php echo $testimonial->getEmail(); ?></div>
                <div class="message"><?php echo $testimonial->getMessage(); ?></div>
                <div class="company"><?php echo $testimonial->getCompany(); ?></div>
                <div class="rating"><?php echo $testimonial->getRating(); ?></div>
                <div class="status"><?php echo $testimonial->getStatus(); ?></div>
            </li>
            <?php $iterator++; ?>
        <?php endforeach; ?>
    </ol>
</div>
